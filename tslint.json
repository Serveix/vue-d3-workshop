{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "eofline": true,
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "align": true,
    "jsdoc-format": false,
    "no-unused-expression":true,
    "ordered-imports": false,
    "variable-name": true,
    "trailing-comma": [true, {
      "multiline": "never",
      "singleline": "never"
    }]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": true,
    "semicolon": [true, "never"],
    "eofline": true,
    "trailing-comma": [true, {
      "multiline": "never",
      "singleline": "never"
    }],
    "curly": false,
    "no-bitwise":false,
    
    "arrow-parens": false,
    "no-console": false,
    "no-unused-expression":true,
    "ordered-imports": false,
    "variable-name": true
  }
}